{
  "name": "@hwdtech/react-signalr",
  "version": "0.3.1",
  "description": "A set of helper components to work with SignalR hub connections & streams",
  "main": "./dist/createConnectionContext.js",
  "directories": {
    "lib": "./lib",
    "example": "./stories"
  },
  "repository": "github:hwdtech/react-signalr",
  "homepage": "https://github.com/hwdtech/react-signalr/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/hwdtech/react-signalr/issues"
  },
  "author": "Max Malov <mmalov@hwdtech.ru>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "npm run storybook",
    "test": "jest",
    "fmt": "prettier --write 'lib/**/*' '*.md'",
    "build": "rimraf dist && NODE_ENV=production tsc",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "devDependencies": {
    "@aspnet/signalr": "^1.0.2",
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-links": "^3.4.10",
    "@storybook/addons": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "@storybook/storybook-deployer": "^2.3.0",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.11",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__react": "^3.0.9",
    "awesome-typescript-loader": "^4.0.0",
    "babel-core": "^6.26.3",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-testing-library": "^5.0.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslib": "^1.9.3",
    "typescript": "^3.0.1"
  },
  "lint-staged": {
    "**/*.(ts|tsx|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "semi": true
  },
  "dependencies": {},
  "files": [
    "dist/*"
  ],
  "keywords": [
    "react",
    "react-context",
    "signalr"
  ],
  "jest": {
    "roots": [
      "<rootDir>/lib"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "__tests__/helpers"
    ]
  }
}
